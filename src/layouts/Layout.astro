---
import "../styles/global.css";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <a href="/" class="logo">
        <h1>Receita</h1>
      </a>
    </header>
    <slot />
  </body>
</html>
<style>
  header {
	display: grid;
    grid-template-columns: 1fr minmax(46rem, auto) 1fr;
    padding: 2rem;
  }

  .logo {
  }

  h1 {
    font-family: var(--title-font-family);
    font-size: 2.5rem;
    font-weight: 700;
  }
</style>
